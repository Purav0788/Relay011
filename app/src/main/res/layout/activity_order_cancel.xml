<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E5E5">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0752AD">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Cancelled"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="12dp"
                android:textSize="20dp"
                android:layout_marginLeft="36dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Aggarwal Suppliers"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:textSize="12dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="37dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_chat_bubble_outline_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="21dp"/>

        </RelativeLayout>




    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_marginTop="60dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="311dp"
                android:layout_height="83dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal"
                android:outlineSpotShadowColor="#E5E5E5"
                android:layout_marginTop="21dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_grey">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:background="#E8E8E8"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Received From"
                        android:textColor="#615D5D"
                        android:textSize="14dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="26dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kanishk"
                        android:textSize="18dp"
                        android:textColor="#615D5D"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_marginTop="39dp"
                        android:layout_marginLeft="43dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Date"
                        android:textColor="#615D5D"
                        android:textSize="14dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="186dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wed, Feb 5"
                        android:textSize="18dp"
                        android:textColor="#615D5D"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_marginTop="39dp"
                        android:layout_marginLeft="181dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <androidx.cardview.widget.CardView
                android:layout_width="317dp"
                android:layout_height="194dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_grey">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="#330752AD">

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8E8E8"
                        android:layout_marginTop="37dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order"
                        android:textSize="14dp"
                        android:textColor="#0752AD"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="150dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_shopping_cart_24"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="125dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="38dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order ID : 12ABCD"
                                android:textSize="14dp"
                                android:textColor="#615D5D"
                                android:fontFamily="@font/inter_semibold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#615D5D"
                                android:text="3 items"
                                android:fontFamily="@font/inter_semibold"
                                android:textSize="14dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="37dp"
                                android:layout_alignParentRight="true"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_baseline_arrow_drop_up_grey_24"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="12dp"/>


                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E8E8E8"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chocolates"
                                android:textSize="14dp"
                                android:textColor="#615D5D"
                                android:fontFamily="@font/inter_semibold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#615D5D"
                                android:text="5 boxes"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="14dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="35dp"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E8E8E8"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Blue Lays"
                                android:textSize="14dp"
                                android:textColor="#615D5D"
                                android:fontFamily="@font/inter_semibold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#615D5D"
                                android:text="3 packets"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="14dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="22dp"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E8E8E8"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="37dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coke"
                                android:textSize="14dp"
                                android:textColor="#615D5D"
                                android:fontFamily="@font/inter_semibold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="17dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#615D5D"
                                android:text="10 bottles"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="14dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="22dp"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                    </LinearLayout>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="317dp"
                android:layout_height="81dp"
                android:layout_marginTop="23dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_grey">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#330752AD">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Delivery Location"
                            android:fontFamily="@font/inter_semibold"
                            android:textSize="14dp"
                            android:textColor="#0752AD"
                            android:layout_marginLeft="120dp"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="19dp"
                            android:src="@drawable/ic_baseline_location_on_blue_24"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="95dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_drop_up_blue_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="45dp"/>


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop 3, Civil Lines, Ludhiana, Punjab"
                        android:textSize="14dp"
                        android:textColor="#615D5D"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_marginTop="43dp"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="317dp"
                android:layout_height="81dp"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_grey">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#330752AD">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Order Notes"
                            android:fontFamily="@font/inter_semibold"
                            android:textSize="14dp"
                            android:textColor="#0752AD"
                            android:layout_marginLeft="120dp"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_baseline_chat_blue_24"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="95dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_arrow_drop_up_blue_24"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="83dp"/>


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver before 7 pm"
                        android:textSize="14dp"
                        android:textColor="#615D5D"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_marginTop="43dp"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="-18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="330dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="21dp"
                android:backgroundTint="#33615D5D">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Total items : 3"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:fontFamily="@font/inter_semibold"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
