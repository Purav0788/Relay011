<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@null">

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday, Feb 2, 2021"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:inputType="date"
        android:textSize="14dp"
        android:fontFamily="@font/inter_semibold"
        android:textStyle="bold"
        android:textColor="#615D5D"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/user2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aggarwal"
                android:textSize="18dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/noOfItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="14dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/itemsssss"
                android:layout_marginRight="5dp"


                />
            <TextView
                android:id="@+id/itemsssss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="items"
                android:textSize="14dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/viewss"
                android:layout_marginRight="15dp"

                />
            <View
                android:id="@+id/viewss"
                android:layout_width="1dp"
                android:layout_height="17dp"
                android:background="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"


                android:layout_toLeftOf="@id/totalPrice"/>
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 240"
                android:textSize="14dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dp"
                />




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmed"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="#70B757"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/inter_medium"
        android:layout_marginTop="22dp"
        android:layout_marginRight="12dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Sent"
        android:textSize="10dp"
        android:textColor="#615D5D"
        android:fontFamily="@font/inter_medium"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_horizontal" />











</RelativeLayout>